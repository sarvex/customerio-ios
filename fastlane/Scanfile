# scheme for xcodebuild
# name found by running: `xcrun xcodebuild -list` (or, see output of workflow run)
scheme("Customer.io-Package")

# required to run tests for a SPM module 
devices([
  "iOS Simulator"
])

output_types("html,junit")
output_files("test-report.html,test-report.xml")
output_directory(".") # where reports are stored 
derived_data_path("/tmp/cio-sdk-tests/derivedData") # required for code coverage generation script to find the xcresult directory

code_coverage(true)
result_bundle(true) # required to get code coverage report 

skip_build(true) # speed up testing 

package_path("./")